length =float(input("Enter the length"))
breadth=float(input("Enter the breadth"))
area= length*breadth
print("Area of rectanagle",area)

o/p:
length =float(input("Enter the length"))
b=float(input("Enter the breadth"))
area= length*b
print("Area of rectanagle",area)

